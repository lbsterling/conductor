!!! XML
!!! Strict
%html{html_attrs('en')}
  %head
    %meta{'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8'}
    %title== #{controller.controller_name}: #{controller.action_name}
    = stylesheet_link_tag 'site'
    = javascript_include_tag :defaults
  %body
    #page
      #header
        - if @controller.controller_name != 'user_sessions'
          #topnav
            %ul
              - if !current_user
                %li= link_to('log in', new_session_path)
              - else
                %li= link_to('your account', account_path)
                %li= link_to('log out', session_path, {:method => :delete, :confirm => "Are you sure you want to log out?"})
        %h1= link_to APP_CONFIG[:site_name], '/', :title => 'Home'
      #container
        - if @controller.controller_name != 'user_sessions' && @controller.controller_name != 'passwords'
          #nav
            %ul
              %li= link_to('Home', '/')
        #content
          =flash_messages
          =yield
      #footer
        %p Copyright &copy; 2008 unwwwired.net, released under the MIT license
